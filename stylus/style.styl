@import "mixins.styl"
@import "settings.styl"


#main-menu
	background-color main-menu-bg-color

#logo
	height 200%
	padding 10px
	background-color logo-bg-color

#logo2
	background-color #931E07
	background-image: linear-gradient(#B02A0E, #931E07);
	height: 118px;
	padding: 10px;
	position: absolute;
	top: 0;
	box-shadow(3px 3px 5px 1px rgba(5,5,5,0.4))

#slogan
	text-align right
	position relative
	padding-top 10%
	padding-left 10%
	margin-bottom -20%
	right 5%
	h1
		a
			color #fff
			font-size 2em
			text-shadow 3px 3px 4px rgba(20, 20, 20, 0.8)

.box
	border-radius(box-rounded-corner-radius)
	box-shadow(3px 3px 5px 1px rgba(5,5,5,0.4))

.box-title
	margin 0px
	border-radius(box-title-rounded-corner-radius)
	box-shadow(3px 3px 5px 1px rgba(5,5,5,0.4))
	background-color rgba(147,30,7,0.8)
	color palette-white
	border solid transparent
	padding 7px
	h5
		color palette-white
		a
			color palette-white

#footer
	background-color footer-bg-color
	color footer-text-color
	padding-top 10px
	position fixed
	bottom 0
	a
		color footer-text-color

.section-banner
	margin-top -30px





@media (max-width: 940px)
	#logo
		height 100%

@media (max-width: 768px)
	#footer
		position relative

	#slogan
		text-align right
		position relative
		padding-top 10%
		padding-left 5%
		margin-bottom -20%
		right 5%
		h1
			a
				color #fff
				font-size 1em !important
				text-shadow 3px 3px 4px rgba(20, 20, 20, 0.8)

